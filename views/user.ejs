        <div class="todo-assign-box">
            <div class="middle-box">
                <h1>PERSONAL TODO</h1>
                <div class="input">
                    <form action="/assignself?user=user" method="post">
                        <input type="text" placeholder="Todo" name="todo" required>
                        <button type="submit">Submit</button>
                </div>
                <div class="mytodo">
                    <% var count=0; %>
                        <% mytodo.reverse().forEach(function(item){ %>

                            <% if(item.status==false){%>
                                <div class="todo">
                                    <p id=<%=count%>><%=item.text%>
                                    </p>
                                    <a href="/deletetodo?uid=<%=data._id%>&tid=<%=item.postId%>&user=user"><i
                                            class="bi bi-trash"></i></a>
                                </div>

                                <% }%>
                                    <% if(item.status==true){%>
                                        <h1 id=<%=count%> style="color: green; text-decoration: line-through;">
                                            <%=item.text%>

                                                <a
                                                    href="/deletetodo?uid=<%=data._id%>&tid=<%=item.postId%>&user=user">..UNDO..</a>
                                        </h1>
                                        <% }%>

                                            <% count++ %>
                                                <% }) %>


                </div>
            </div>
            <div class="right-box">
                <div class="assignedtod mytodo">
                    <h1>Assigned TODO</h1>
                    <% var count1=0; %>
