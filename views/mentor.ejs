    <div class="main-box">

        <div class="todo-assign-box">
            <div class="middle-box">
                
                <h1>PERSONAL TODO</h1>
                <div class="input">
                    <form action="/assignself?user=mentor" method="post">
                        <input type="text" placeholder="Todo" name="todo">
                        <button type="submit">Submit</button>
                    </form>
                </div>
                
                <div class="mytodo">

                    <% var count=0; %>
                            <% mytodo.reverse().forEach(function(item){ %>

                                <% if(item.status==false){%>
                                    <div class="todo">
                                        <p id=<%=count%>><%=item.text%>
                                        </p>
                                        <a href="/deletetodo?uid=<%=data._id%>&tid=<%=item.postId%>&user=mentor" style="color: rgb(56, 72, 197);"><i
                                                class="bi bi-trash"></i></a>
                                    </div>

                                    <% }%>
                                        <% if(item.status==true){%>
                                            <h1 id=<%=count%> style="color: green; text-decoration: line-through;">
                                                <%=item.text%>

                                                    <a
                                                        href="/deletetodo?uid=<%=data._id%>&tid=<%=item.postId%>&user=mentor">..UNDO..</a>
                                            </h1>
                                            <% }%>

                                                <% count++ %>
                                                    <% }) %>

                </div>

            </div>
            <div class="right-box">
                <div class="asin-task">
                    <h1>ASSIGN TASK</h1>

                    <div class="assing-input">
                        <form action="/assignteam?from=mentor" method="post">
                            <input type="text" placeholder="Enter the mate name" name="username">
                            <input type="text" placeholder="Enter the task" name="todo">
                            <button type="submit" class="btn bg-dark text-light">Assign</button>
                        </form>
                    </div>
                    <div class="ack">


                        <%if(ack=='err') { %>
                            <p id="wrong">something went wrong</p>
                            <%}%>
                                <%if(ack=='nf') { %>
                                    <p id="error">username not found</p>
                                    <%}%>
                                        <%if(ack=='sucess') { %>
                                            <p id="success">ASSIGNED SUCESSFULLY</p>
                                            <%}%>
                    </div>


                </div>

