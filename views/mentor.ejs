<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/nav.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
    <title>Document</title>
</head>

<body class="mentor">
    <nav class="navbar">
        <div class="brand-tatal">Tracking System</div>
        <a href="#" class="toggle-btn">
            <span class="bar"></span>
            <span class="bar"></span>
            <span class="bar"></span>
        </a>
        <div class="navbar-links">
            <ul>
                <li><a href="#">Home</a></li>
                <li><a href="#">About</a></li>
                <li><a href="/myteam">My Team Mates</a></li>
                <li><a href="/logout">Logout</a></li>
            </ul>
        </div>

    </nav>
    <div class="main-box">
        <div class="todo-assign-box">
            <div class="middle-box">

                <h1>PERSONAL TODO</h1>
                <div class="input">
                    <form action="/assignself?user=mentor" method="post">
                        <input type="text" placeholder="Todo" name="todo" required>
                        <button type="submit">Submit</button>
                    </form>
                </div>

                <div class="mytodo">

                    <% var count=0; %>
                        <% mytodo.reverse().forEach(function(item){ %>

                            <% if(item.status==false){%>
                                <div class="todo">
                                    <p id=<%=count%>><%=item.text%>
                                    </p>
                                    <a href="/deletetodo?uid=<%=data._id%>&tid=<%=item.postId%>&user=mentor"
                                        style="color: rgb(56, 72, 197);"><i class="bi bi-trash"></i></a>
                                </div>

                                <% }%>
                                    <% if(item.status==true){%>
                                        <h1 id=<%=count%> style="color: green; text-decoration: line-through;">
                                            <%=item.text%>

                                                <a
                                                    href="/deletetodo?uid=<%=data._id%>&tid=<%=item.postId%>&user=mentor">..UNDO..</a>
                                        </h1>
                                        <% }%>

                                            <% count++ %>
                                                <% }) %>

                </div>

            </div>
            <div class="right-box">
                <div class="asin-task">
                    <h1>ASSIGN TASK</h1>

                    <div class="assing-input">
                        <form action="/assignteam?from=mentor" method="post">
                            <input type="text" placeholder="Enter the mate name" name="username">
                            <input type="text" placeholder="Enter the task" name="todo" required>
                            <button type="submit" class="btn bg-dark text-light">Assign</button>
                        </form>
                    </div>
                    <div class="ack">


                        <%if(ack=='err') { %>
                            <p id="wrong">something went wrong</p>
                            <%}%>
                                <%if(ack=='nf') { %>
                                    <p id="error">username not found</p>
                                    <%}%>
                                        <%if(ack=='sucess') { %>
                                            <p id="success">ASSIGNED</p>
                                            <%}%>
                    </div>


                </div>

            </div>
        </div>
    </div>

    <script>
        const togglebtn = document.getElementsByClassName("toggle-btn")[0];
        const nav = document.getElementsByClassName("navbar-links")[0];

        togglebtn.addEventListener("click", () => {
            nav.classList.toggle("active")
        })
    </script>
</body>

<%- include('part/footer')%>